# Production Environment Configuration for Creator Suite
# Update these values with your actual production credentials

# Database Configuration
DATABASE_URL=postgresql://creator_suite:creator_suite_password@localhost:5432/creator_suite_db
DB_HOST=localhost
DB_NAME=creator_suite_db
DB_USER=creator_suite
DB_PASS=creator_suite_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your_production_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys - Update with your actual keys
RUNWAY_API_KEY=your_runway_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Bot Tokens - Update with your actual tokens
DISCORD_BOT_TOKEN=your_discord_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_here

# Instagram Configuration
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here

# Payment Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Domain Configuration
FRONTEND_URL=https://video.destinpq.com
API_URL=https://video-api.destinpq.com

# Webhook URLs for Bots
DISCORD_WEBHOOK_URL=https://video-api.destinpq.com/api/v1/webhooks/discord
TELEGRAM_WEBHOOK_URL=https://video-api.destinpq.com/api/v1/webhooks/telegram
WHATSAPP_WEBHOOK_URL=https://video-api.destinpq.com/api/v1/webhooks/whatsapp
INSTAGRAM_WEBHOOK_URL=https://video-api.destinpq.com/api/v1/webhooks/instagram

# File Storage
STORAGE_TYPE=local
UPLOAD_PATH=./public/storage
MAX_FILE_SIZE=100MB

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=your_email@gmail.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Video Processing
MAX_VIDEO_LENGTH=120
DEFAULT_VIDEO_RESOLUTION=1024x576
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS
ALLOWED_ORIGINS=https://video.destinpq.com,https://video-api.destinpq.com
