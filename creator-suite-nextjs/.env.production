# Production environment variables for Next.js frontend
# DO NOT STORE SECRETS HERE - Only expose values safe for the browser
# Prefix with NEXT_PUBLIC_ to be available to client code

# API Configuration
NEXT_PUBLIC_API_URL=https://video-api.destinpq.com

# Application Configuration
NEXT_PUBLIC_APP_NAME=Creator Suite
NEXT_PUBLIC_APP_VERSION=1.0.0

# Analytics (optional - add your analytics ID)
# NEXT_PUBLIC_GA_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# CDN Configuration (optional)
# NEXT_PUBLIC_CDN_URL=
